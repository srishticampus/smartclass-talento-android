<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/exam_set_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placed_candidate_iv">

                <TextView
                    android:id="@+id/placement_name_tv"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/darker_grey"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:id="@+id/que_set_linear_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/placement_name_tv"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exam_details_duration_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        android:background="@color/darker_grey" />

                    <TextView
                        android:id="@+id/placement_placed_via_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/exam_details_duration_tv"
                        android:background="@color/darker_grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/que_set_linear_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/que_set_linear_1"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:background="@color/darker_grey" />

                    <TextView
                        android:id="@+id/placement_company_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/exam_details_duration_tv"
                        android:background="@color/darker_grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/que_set_linear_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/que_set_linear_2"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/last_score_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:background="@color/darker_grey"/>
                    <TextView
                        android:id="@+id/placement_position_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/exam_details_duration_tv"
                        android:background="@color/darker_grey" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/que_set_linear_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/que_set_linear_3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:background="@color/darker_grey"/>
                    <TextView
                        android:id="@+id/placement_placed_dt"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="120dp"
                        android:background="@color/darker_grey"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/exam_details_duration_tv"
                         />
                </LinearLayout>
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/placed_candidate_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/circular_image_for_shimmer"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>