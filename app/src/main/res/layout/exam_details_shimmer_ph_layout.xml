<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/exam_set_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/exam_details_testName_tv"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/darker_grey"/>

                <LinearLayout
                    android:id="@+id/que_set_linear_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exam_details_testName_tv"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exam_details_duration_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        android:background="@color/darker_grey" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/exam_details_duration_tv"
                        android:background="@color/darker_grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/que_set_linear_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/que_set_linear_1"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:background="@color/darker_grey" />

                    <TextView
                        android:id="@+id/exam_details_no_qn"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/exam_details_duration_tv"
                        android:background="@color/darker_grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/que_set_linear_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/que_set_linear_2"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/last_score_tv"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:background="@color/darker_grey" />
                </LinearLayout>
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/circular_image_for_shimmer"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>



