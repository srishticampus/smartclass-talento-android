<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/exam_details_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:padding="3dp"
        android:background="@drawable/squircle_bg"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="0dp"
            app:cardCornerRadius="18dp">

            <ImageView
                android:id="@+id/course_iv_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/android_logo" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exam_details_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/exam_details_rl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exam_details_testName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Question set name"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_of_que_exam_details"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:fontFamily="@font/roboto"
                android:text="No of questions"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/exam_details_no_qn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/roboto"
                tools:text="100" />
        </LinearLayout>

        <TextView
            android:id="@+id/last_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            tools:text="Your Previous Score is"
            android:textSize="11sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exam_details_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/exam_details_duration_bg"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/exam_details_timer_icon" />

        <TextView
            android:id="@+id/exam_details_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="30"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Min"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_grey"
        android:layout_below="@id/exam_details_rl"
        android:layout_marginTop="16dp"/>
    <RelativeLayout
        android:id="@+id/exam_detail_lock_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/exam_details_time_ll"
        android:layout_alignParentRight="true"
        android:layout_marginRight="95dp"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/exam_details_lock" />
    </RelativeLayout>
</RelativeLayout>

