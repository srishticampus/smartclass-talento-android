<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/exam_details_rl"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/squircle_with_grey_fill"
        android:layout_centerVertical="true">


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/exam_details_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/exam_details_rl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exam_details_testName_tv"
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:background="#D7D9E6"
             />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:orientation="horizontal"
            android:background="#D7D9E6">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exam_details_time_ll"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/exam_details_duration_bg"
        android:orientation="horizontal"
        android:padding="5dp">


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_grey"
        android:layout_below="@id/exam_details_rl"
        android:layout_marginTop="16dp"/>

</RelativeLayout>