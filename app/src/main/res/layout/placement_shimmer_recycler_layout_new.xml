<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/placed_candidate_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                android:background="#62A8E4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/placement_name_tv"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:background="@color/darker_grey"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/darker_grey" />

                    <TextView
                        android:id="@+id/placement_placed_via_tv"
                        android:layout_width="90dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/darker_grey" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/darker_grey" />

                    <TextView
                        android:id="@+id/placement_company_tv"
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/roboto"
                        android:maxLines="2"
                        android:background="@color/darker_grey"
                        android:gravity="right" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="14dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/darker_grey"/>
                    <TextView
                        android:id="@+id/placement_position_tv"
                        android:layout_width="90dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/darker_grey"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="14dp"
                        android:layout_alignParentLeft="true"
                       android:background="@color/darker_grey"/>
                    <TextView
                        android:id="@+id/placement_placed_dt"
                        android:layout_width="60dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/darker_grey"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>